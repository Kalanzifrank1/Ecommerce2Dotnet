@model ChechoutModel
@{
    ViewData["Title"] = "Checkout";
}

<h1>Checkout</h1>
<form asp-action="Checkout">
    <div class="py-2">
        <label asp-for="Name">Name*</label>
        <input type="text" class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="py-2">
        <label asp-for="Email">Email*</label>
        <input type="email" class="form-control" asp-for="Email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="py-2">
        <label asp-for="PhoneNumber">MobileNumber*</label>
        <input type="text" class="form-control" asp-for="PhoneNumber" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div class="py-2">
        <label asp-for="Address">Address*</label>
        <textarea type="text" class="form-control" asp-for="Address" rows="5"/>
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="py-2">
        <span class="mr-2">COD</span>
        <select asp-for="PaymentMethod" class="form-control">
            @foreach(var method in Enum.GetValues(
                typeof(Ecommerce2.Constants.PaymentMethod)
            ))
                    {
                        <option value="@method.ToString()">@method.ToString()</option>
                    }
                </select>
    </div>
    <div class="py-2">
        <button type="submit" class="btn btn-info">Next</button>
    </div>
</form>
